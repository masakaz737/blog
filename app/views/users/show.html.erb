<div class="layout">
  <h1><%= @user.name %>のページ</h1>
  <%= form_with(model: @user, local: true, url: user_path(@user.id)) do |form| %>
    <div class="user_image">
      <%= form.label :image %>
      <%= image_tag(@user.image.url) if @user.image.url %>
      <%= form.file_field :image, id: :user_image %>
      <%= form.hidden_field :image_cache %>
    </div>
    <%= form.submit "登録", class: "btn btn-default" %>
  <% end %>
<!-- <p><%= image_tag @user.image %></p> -->
<p>メールアドレス:
  <%= @user.email %></p>
<p>＜お気に入りBlog＞</p>
<% @favorite_blogs.each do |blog| %>
  <p>タイトル:
    <%= blog.title %>
    内容:
    <%= blog.content %>
    <button type="button" class="btn btn-default"><%= link_to '詳細を確認する', blog_path(blog.id) %></button>
  </p>
<% end %>
</div>
