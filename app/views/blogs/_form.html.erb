<%= form_with(model: @blog, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_title form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="blog_title form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class:"form-control" %>
  </div>
  <div class="blog_image">
    <%= form.label :image %>
    <%= image_tag(@blog.image.url) if @blog.image.url %>
    <%= form.file_field :image, id: :blog_image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <%= form.submit "送信", class: "btn btn-default" %>
<% end %>

<%= link_to "ブログ一覧画面にもどる", blogs_path %>
